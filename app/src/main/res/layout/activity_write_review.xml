<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rnd.plani.co.kr.dadfarm.DetailProductInfo.Review.WriteReviewActivity">

    <rnd.plani.co.kr.dadfarm.CustomToolbar.BlackThemeTextToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:inputType="textPersonName"
            android:ems="140"
            android:id="@+id/edit_content"
            android:hint="구매후기를 작성해주세요(140자 이내)"
            android:background="@drawable/bg_white_background_gray_stroke"
            android:padding="8dp"
            android:gravity="top"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>
