<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rnd.plani.co.kr.dadfarm.DetailProductInfo.Relation.RelationInfoActivity">
    <rnd.plani.co.kr.dadfarm.CustomToolbar.BlackThemeTextToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <rnd.plani.co.kr.dadfarm.PersonRelationView
        android:id="@+id/relation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

    </rnd.plani.co.kr.dadfarm.PersonRelationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/relation_view"
        android:padding="12dp"
        android:id="@+id/linear_edit_relation">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_of_relation"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:textColor="@color/text_light_gray" />

            <EditText
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_relation"
                android:background="@drawable/bg_white_background_gray_stroke"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@color/light_black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_my_relation"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:textColor="@color/text_light_gray" />

            <EditText
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_my_relation"
                android:background="@drawable/bg_white_background_gray_stroke"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@color/light_black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
