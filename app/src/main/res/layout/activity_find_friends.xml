<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rnd.plani.co.kr.dadfarm.Certification.FindFriendsActivity">
    <rnd.plani.co.kr.dadfarm.CustomToolbar.IntroToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="48dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_find_friends"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_status"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

        <Button
            android:text="주소록으로 친구찾기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_find_friends"
            android:background="@drawable/empty_round_rectangle_black_stroke"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:text="@string/find_friends_message"
            android:gravity="center"
           android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="88dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_network"
            android:id="@+id/imageView11"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
