<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="피로회복에 좋은 유기농 아로니아"
            android:textColor="#fff"
            android:textSize="38sp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/avatar"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/text_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--<com.wefika.flowlayout.FlowLayout-->
        <!--android:id="@+id/flowlayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="23dp"-->
        <!--android:layout_marginTop="23dp"-->
        <!--android:gravity="center_horizontal">-->

        <!--</com.wefika.flowlayout.FlowLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <rnd.plani.co.kr.dadfarm.Home.TagBoxView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_product_name">

            </rnd.plani.co.kr.dadfarm.Home.TagBoxView>

            <rnd.plani.co.kr.dadfarm.Home.TagBoxView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_price">

            </rnd.plani.co.kr.dadfarm.Home.TagBoxView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <rnd.plani.co.kr.dadfarm.Home.TagBoxView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_address">

            </rnd.plani.co.kr.dadfarm.Home.TagBoxView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <rnd.plani.co.kr.dadfarm.Home.TagBoxView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_order_count">

            </rnd.plani.co.kr.dadfarm.Home.TagBoxView>

            <rnd.plani.co.kr.dadfarm.Home.TagBoxView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag_update_date">

            </rnd.plani.co.kr.dadfarm.Home.TagBoxView>

        </LinearLayout>
    </LinearLayout>

    <rnd.plani.co.kr.dadfarm.Home.OneRelationView
        android:id="@+id/one_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

    </rnd.plani.co.kr.dadfarm.Home.OneRelationView>

    <rnd.plani.co.kr.dadfarm.Home.TwoRelationView
        android:id="@+id/two_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

    </rnd.plani.co.kr.dadfarm.Home.TwoRelationView>

    <rnd.plani.co.kr.dadfarm.Home.ThreeRelationView
        android:id="@+id/three_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

    </rnd.plani.co.kr.dadfarm.Home.ThreeRelationView>

    <rnd.plani.co.kr.dadfarm.Home.FourRelationView
        android:id="@+id/four_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

    </rnd.plani.co.kr.dadfarm.Home.FourRelationView>
</FrameLayout>