<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_product_layout_background"
    tools:context=".DetailProductInfo.DetailProductActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <rnd.plani.co.kr.dadfarm.CustomToolbar.BlackThemeShareToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        app:frv_divider="@color/detail_product_layout_background"
        app:frv_dividerHeight="8dp"
        android:layout_alignParentStart="true" />
</RelativeLayout>
