<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_product_layout_background"
    tools:context=".DetailProductInfo.DetailProductActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <rnd.plani.co.kr.dadfarm.CustomToolbar.BlackThemeShareToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/linear_btn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:background="@color/black_theme_toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/review"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/btn_review"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/order"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/btn_order"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>
